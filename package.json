{
  "name": "@lite-js/torch",
  "version": "0.0.3",
  "description": "test framework to light up the world",
  "main": "index.js",
  "bin": {
    "torch-coverage": "./bin/coverage",
    "torch": "./bin/torch"
  },
  "scripts": {
    "lint": "standard",
    "lint-fix": "standard --fix",
    "test": "node bin/torch test/main && node bin/torch --renderer test/renderer",
    "test-live": "node bin/torch --interactive test/renderer"
  },
  "pre-commit": {
    "run": [
      "lint",
      "test"
    ],
    "silent": false
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lite-js/torch.git"
  },
  "keywords": [
    "torch",
    "electron",
    "mocha",
    "test",
    "framework"
  ],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lite-js/torch/issues"
  },
  "homepage": "https://github.com/lite-js/torch#readme",
  "dependencies": {
    "commander": "^2.9.0",
    "electron": "^1.6.10",
    "glob": "^7.1.2",
    "is-electron-renderer": "^2.0.1",
    "istanbul": "^0.4.5",
    "lodash": "^4.17.4",
    "mocha": "^3.4.2",
    "which": "^1.2.14"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2",
    "standard": "^10.0.2",
    "standard-version": "^4.0.0"
  }
}
